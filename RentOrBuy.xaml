<Window x:Class="BudgetApp.RentOrBuy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetApp"
        mc:Ignorable="d"
        Title="RentOrBuy" Height="450" Width="800" ResizeMode="NoResize" WindowState="Maximized" Background="#FFD68A">
    <Grid>
        <!--columns to spilt page-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--rows to spilt page-->
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--color for heading (Microsoft, 2021)-->
        <Rectangle Grid.Row="0" Grid.ColumnSpan="4">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="DarkOrange" Offset="0.0" />
                    <GradientStop Color="#FFD68A" Offset="0.25" />
                    <GradientStop Color="#FFD68A" Offset="0.75" />
                    <GradientStop Color="DarkOrange" Offset="1.0" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!--Text-->
        <TextBlock Text="RENT OR BUY" 
                   Grid.ColumnSpan="4" 
                   Foreground="White" 
                   FontFamily="Arial" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   FontSize="100">
            <TextBlock.Effect>
                <DropShadowEffect
                    ShadowDepth="7"
                    Direction="180"
                    Color="Black"
                    Opacity="0.9"
                    BlurRadius="2"></DropShadowEffect>
            </TextBlock.Effect>
        </TextBlock>

        <!--labels and textboxs (Stack Overflow, 2021)-->
        <TextBlock Text="Please Select the Option that Applies to you:" 
                   TextDecorations="Underline" 
                   Foreground="black" 
                   FontFamily="Arial" 
                   VerticalAlignment="Top" 
                   Margin="150 0 0 0" 
                   FontSize="20" 
                   Grid.Row="2" 
                   Grid.Column="1"
                   Grid.ColumnSpan="3"/>

        <!--combobox (C-sharpcorner, 2021)-->
        <ComboBox Grid.Row="2"
                  Grid.Column="0"
                  Grid.ColumnSpan="3"
                  Width="350"
                  Height="30"
                  Margin="300 50 0 0"
                  Name="ComboBox"
                  BorderThickness="3" 
                  BorderBrush="Orange">
            <ComboBoxItem Content="Rent" x:Name="rent"></ComboBoxItem>
            <ComboBoxItem Content="Buy" x:Name="buy"></ComboBoxItem>
        </ComboBox>

        <!--button-->
        <Button Content="OK" 
                x:Name="OK" 
                Background="Orange" 
                BorderBrush="White"
                BorderThickness="2"
                Foreground="White" 
                FontFamily="Arial" 
                Height="50"
                Width="100" 
                Margin="320 50 50 0" 
                FontSize="20" 
                Grid.Row="3"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Click="submit_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>
    </Grid>
</Window>
