<Window x:Class="BudgetApp.Buy"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BudgetApp"
        mc:Ignorable="d"
        Title="Buy" Height="450" Width="800" ResizeMode="NoResize" WindowState="Maximized" Background="#FFD68A">
    <Grid>
        <!--columns to spilt page-->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!--rows to spilt page-->
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!--color for heading (Microsoft, 2021)-->
        <Rectangle Grid.Row="0" Grid.ColumnSpan="4">
            <Rectangle.Fill>
                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                    <GradientStop Color="DarkOrange" Offset="0.0" />
                    <GradientStop Color="#FFD68A" Offset="0.25" />
                    <GradientStop Color="#FFD68A" Offset="0.75" />
                    <GradientStop Color="DarkOrange" Offset="1.0" />
                </LinearGradientBrush>
            </Rectangle.Fill>
        </Rectangle>

        <!--Text-->
        <TextBlock Text="Buy" 
                   Grid.ColumnSpan="4" 
                   Foreground="White" 
                   FontFamily="Arial" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Center" 
                   FontSize="100">
            <TextBlock.Effect>
                <DropShadowEffect
                    ShadowDepth="7"
                    Direction="180"
                    Color="Black"
                    Opacity="0.9"
                    BlurRadius="2"></DropShadowEffect>
            </TextBlock.Effect>
        </TextBlock>

        <!--labels and textboxs (Stack Overflow, 2021)-->
        <TextBlock Text="Please Input Loan Details Below:" 
                   TextDecorations="Underline" 
                   Foreground="black" 
                   FontFamily="Arial" 
                   VerticalAlignment="Top" 
                   Margin="200 10 0 0" 
                   FontSize="20" 
                   Grid.Row="1" 
                   Grid.Column="1"
                   Grid.ColumnSpan="3"/>

        <StackPanel Grid.Row="1" 
                   Grid.Column="1"
                   Grid.RowSpan="5"
                    Grid.ColumnSpan="3"
                    Margin="200 40 0 0">

            <TextBlock Text=" "/>
            <Label Content="Please insert Purchase price of property" 
                   Height="35" 
                   HorizontalAlignment="left"/>
            <TextBox BorderThickness="3" 
                     BorderBrush="Orange" 
                     Height="25" 
                     Width="250" 
                     HorizontalAlignment="left" 
                     x:Name="price"/>

            <TextBlock Text=" "/>
            <Label Content="Please insert Total deposit" 
                   Height="35" 
                   HorizontalAlignment="left"/>
            <TextBox BorderThickness="3" 
                     BorderBrush="Orange" 
                     Height="25" 
                     Width="250" 
                     HorizontalAlignment="left" 
                     x:Name="deposit"/>

            <TextBlock Text=" "/>
            <Label Content="Please insert Interest rate (In percentage)" 
                   Height="35" 
                   HorizontalAlignment="left"/>
            <TextBox BorderThickness="3" 
                     BorderBrush="Orange" 
                     Height="25" 
                     Width="250" 
                     HorizontalAlignment="left" 
                     x:Name="interest"/>

            <TextBlock Text=" "/>
            <Label Content="Please insert how many Months do you want to pay for (between 240 and 360)" 
                   Height="35" 
                   HorizontalAlignment="left"/>
            <TextBox BorderThickness="3" 
                     BorderBrush="Orange" 
                     Height="25" 
                     Width="250" 
                     HorizontalAlignment="left" 
                     x:Name="months"/>

            <TextBlock Text=" "/>
            <Label Content="Please select what you want to do next:" 
                   Height="35" 
                   HorizontalAlignment="left"/>

            <!--combobox (C-sharpcorner, 2021)-->
            <ComboBox Name="ComboBox"
                      Width="250"
                      HorizontalAlignment="Left">
                <ComboBoxItem Content="Vehicle Purchase" x:Name="veh"/>
                <ComboBoxItem Content="Savings" x:Name="sav"/>
                <ComboBoxItem Content="Expense List" x:Name="EL"/>
            </ComboBox>

        </StackPanel>

        <!--button-->
        <Button Content="NEXT" 
                x:Name="next" 
                Background="Orange" 
                BorderBrush="White"
                BorderThickness="2"
                Foreground="White" 
                FontFamily="Arial" 
                Height="50"
                Width="100" 
                Margin="280 30 0 0" 
                FontSize="20" 
                Grid.Row="4"
                Grid.RowSpan="2"
                Grid.ColumnSpan="3"
                Click="next_Click">
            <Button.Resources>
                <Style TargetType="Border">
                    <Setter Property="CornerRadius" Value="10"/>
                </Style>
            </Button.Resources>
        </Button>

    </Grid>
</Window>
